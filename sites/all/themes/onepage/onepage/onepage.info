name = OnePage
description = Theme for websites.
version = VERSION
core = 7.x
engine = 'phptemplate'
base theme = 'light'

stylesheets[all][] = bootstrap/css/bootstrap.css
stylesheets[all][] = bootstrap/css/bootstrap-responsive.css
stylesheets[all][] = css/layout.css
stylesheets[all][] = css/region.css
